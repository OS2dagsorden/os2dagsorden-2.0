 */
function os2dagsorden_access_helper_get_user() {
  global $user;
  if (!isset($GLOBALS['full_user']) && $user->uid) {
    $GLOBALS['full_user'] = user_load($user->uid);
  }
  if (!$user->uid) {
    $GLOBALS['full_user'] = NULL;
  }

  return $GLOBALS['full_user'];
}

/**
 * Implements hook_user_presave().
 *
 * @param $edit
 * @param $account

/**
 * Schedules the future convertion
 *
 * @param int $fid file id
 * @param int $did node id
 *
 */
function os2dagsorden_pdf2htmlex_schedule($fid, $did) {
  try {
    db_insert('os2dagsorden_pdf2htmlex_files')
    ->fields(array(
      'fid' => $fid,
      'did' => $did,
      //'created_filepath' => $file_path,
      'filename' => NULL,
      'progress' => NULL,
    ))
    ->execute();
  } catch (Exception $e) {
    watchdog('pdf2htmlEX', 'Cannot schedule a file: fid: %fid, did: %did, e: %e', array('%fid' => $fid, '%did' => $did, '%e' => $e->getMessage()), WATCHDOG_ERROR);
  }
}


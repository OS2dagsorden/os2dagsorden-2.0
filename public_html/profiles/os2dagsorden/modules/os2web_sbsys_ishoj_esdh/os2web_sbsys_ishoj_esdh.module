function os2web_sbsys_ishoj_esdh_os2web_help($sections) {

  // Content types.
  $sections['contenttype'] .= t('<p><b>Meeting node:</b> Add <a href="@url" target="_blank">meetings</a> directly.<br /><i><a href="@sbsys" target="_blank">See the advanced documentation for the OS2web eDoc module</a>(.pdf)</i></p>', array('@url' => url('node/add/os2web_meetings_meeting'), '@sbsys' => file_create_url(drupal_get_path('module', 'os2web_sbsys_ishoj_esdh') . '/os2web_sbsys_modul_setup.pdf')));
  $sections['import'] .= t('<p><b>Import agenades:</b> <a href="@sbsys" target="_blank">See the advanced documentation for the OS2web eDoc module import</a>(.pdf)</i></p>', array('@url' => url('node/add/os2web_meetings_meeting'), '@sbsys' => file_create_url(drupal_get_path('module', 'os2web_sbsys_ishoj_esdh') . '/os2web_sbsys_modul_setup.pdf')));
  $sections['documentation'] .= t('<p><b>PDF documentation for sbsys:</b> <a href="@sbsys" target="_blank">Documentation for the OS2web eDoc module</a>(.pdf)</i></p>', array('@url' => url('node/add/os2web_meetings_meeting'), '@sbsys' => file_create_url(drupal_get_path('module', 'os2web_sbsys_ishoj_esdh') . '/os2web_sbsys_modul_setup.pdf')));
  return $sections;

}



